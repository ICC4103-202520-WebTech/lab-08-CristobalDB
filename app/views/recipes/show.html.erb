<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-body">
      <p class="text-muted mb-2">Creada por: <%= @recipe.user.email %></p>

      <h1 class="card-title mb-4 text-center"><%= @recipe.title %></h1>

      <div class="row mb-3">
        <div class="col-md-6">
          <p><strong>‚è± Tiempo de cocci√≥n:</strong> <%= @recipe.cook_time %> min</p>
        </div>
        <div class="col-md-6">
          <p><strong>üî• Dificultad:</strong> <%= @recipe.difficulty %></p>
        </div>
      </div>

      <div class="mt-4">
        <h5 class="mb-3">üìã Instrucciones</h5>
        <div class="border rounded p-3 bg-light">
          <%= @recipe.instructions %>
        </div>
      </div>

      <div class="mt-4 d-flex justify-content-between align-items-center">
        <%= link_to "‚Üê Volver", recipes_path, class: "btn btn-secondary" %>

        <% if can?(:update, @recipe) || can?(:destroy, @recipe) %>
          <div class="d-flex gap-2">
            <% if can?(:update, @recipe) %>
              <%= link_to "‚úèÔ∏è Editar", edit_recipe_path(@recipe), class: "btn btn-primary" %>
            <% end %>
            <% if can?(:destroy, @recipe) %>
              <%= link_to "üóëÔ∏è Eliminar", recipe_path(@recipe),
                    data: { turbo_method: :delete, turbo_confirm: "¬øEliminar esta receta?" },
                    class: "btn btn-danger" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
