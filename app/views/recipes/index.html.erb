<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">üçΩÔ∏è Recetas</h1>

    <% if can?(:create, Recipe) %>
      <%= link_to "‚ûï Nueva receta", new_recipe_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <% if @recipes.any? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @recipes.each do |recipe| %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <p class="card-text">
                <small class="text-muted">Por <%= recipe.user.email %></small>
              </p>

              <h5 class="card-title">
                <%= link_to recipe.title, recipe_path(recipe), class: "text-decoration-none text-dark" %>
              </h5>

              <p class="card-text mb-1"><strong>‚è± Tiempo:</strong> <%= recipe.cook_time %> min</p>
              <p class="card-text"><strong>üî• Dificultad:</strong> <%= recipe.difficulty %></p>
            </div>

            <div class="card-footer d-flex justify-content-between align-items-center">
              <%= link_to "Ver", recipe_path(recipe), class: "btn btn-outline-primary btn-sm" %>

              <% if can?(:update, recipe) || can?(:destroy, recipe) %>
                <div class="d-flex gap-2">
                  <% if can?(:update, recipe) %>
                    <%= link_to "Editar", edit_recipe_path(recipe), class: "btn btn-outline-secondary btn-sm" %>
                  <% end %>
                  <% if can?(:destroy, recipe) %>
                    <%= link_to "Eliminar", recipe_path(recipe),
                          data: { turbo_method: :delete, turbo_confirm: "¬øEst√°s seguro que quieres eliminar esta receta?" },
                          class: "btn btn-outline-danger btn-sm" %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info mt-4" role="alert">
      A√∫n no hay recetas creadas. ¬°Agrega tu primera receta!
    </div>
  <% end %>
</div>
