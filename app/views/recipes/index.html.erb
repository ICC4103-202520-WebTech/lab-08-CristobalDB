<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">🍽️ Recetas</h1>
    <%= link_to "➕ Nueva receta", new_recipe_path, class: "btn btn-primary" %>
  </div>

  <% if @recipes.any? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @recipes.each do |recipe| %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= link_to recipe.title, recipe_path(recipe), class: "text-decoration-none text-dark" %></h5>
              <p class="card-text mb-1"><strong>⏱ Tiempo:</strong> <%= recipe.cook_time %> min</p>
              <p class="card-text"><strong>🔥 Dificultad:</strong> <%= recipe.difficulty %></p>
            </div>
            <div class="card-footer d-flex justify-content-between">
              <%= link_to "Ver", recipe_path(recipe), class: "btn btn-outline-primary btn-sm" %>
              <%= link_to "Eliminar", recipe_path(recipe),
                    data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro que quieres eliminar esta receta?" },
                    class: "btn btn-outline-danger btn-sm" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info mt-4" role="alert">
      Aún no hay recetas creadas. ¡Agrega tu primera receta!
    </div>
  <% end %>
</div>
